// The name of the java file should exactly be same as the class name inside it for the code to run
public class variables{
  public static void main(String[] args){
    // declaring variables
	int marks1;
	int marks2; 

   //initializing variables
	marks1=75;
	marks2=85;

  // declaring and initializing variables in single line
	int distanceAdam=0 , distanceLucy=0;
	System.out.println(distanceAdam);
	System.out.println(distanceLucy);

  // updating variables
	distanceAdam=distanceAdam+15;
	distanceLucy=15;

  //declaring variables in single line
	String student1 = "Adam";
	String student2 = "Lucy";
	System.out.println(marks1);
	System.out.println(student2);

  //data types
	int y = 999999;
	long l = 100000000000;
	short x = 1000;
	float = 0.00f;
	double d = 4.555666;
	char a = 'e';
	char b = 'ec';
	char c = '1';
 	char d='102';
	char e = '$';
	System.out.println(student2);

  // Arthemetic operations
	int x=25;
	int y=20;
	double z=x/y; //no error The operation a/b will leave out the portion after the decimal. So 2.5 will be converted to 2 and then it will be stored as 2.0 in the double variable z.

	double x=3;
	double y=5;
	int z=x/y; //error incompatible data types

	int x = 3;
        double y = 4.0;
        int z = x+y; // Error
        System.out.println(z);

       // example 1
        int x = 3;
        int y = 2;
        int z = x/y;
        System.out.println(z);

        //example 2
        int a = 3;
        int b = 2;
        double c = a/b;
        System.out.println(c);

        // example 3
        double p = 3.0;
        double q = 2.0;
        double r = p/q;
        System.out.println(r);


        double j = 3.0;
        double k = 2.0;
        //int l = j/k;
    }
}
}
}
